extends ../layouts/index

block contenido
    div.py-5 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            spa.font-normal Raices
        h2.text-center.text-3xl.font-extrabold= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded= error.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-md
                form.space-y-5(method="POST" action="/auth/forgotpassword")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email registrado
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email")
                    
                    div.flex.items-center.justify-around
                        a.text-gray-500.text-xs(href="/auth/login") Ya tengo una cuenta
                        a.text-gray-500.text-xs(href="/auth/register") No tengo cuenta. Â¿Desea crear una?
                    input(class="w-full bg-sky-600 hover:bg-sky-700 text-white font-bold py-2 cursor-pointer rounded-md" type="submit" value="Enviar Instrucciones")