extends ../layouts/admin

block contenido
    h2(class="text-2xl font-extrabold text-center my-10")=page

    a(href="/my-properties" class="rounded py-2 px-10 bg-blue-600 hover:bg-blue-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto shadow-md") Regresar

    //- pre= JSON.stringify(message, undefined, 2)

    div(class="mx-auto max-w-4xl bg-white shadow")
        if message.length  
            ul 
                each msg in message 
                    li(class="border-gray-200 border-b p-5")
                        p(class="font-bold text-gray-800") Nombre: 
                            span(class="font-normal")= msg.usuario.nombre
                        p(class="font-bold text-gray-800") Email: 
                            span(class="font-normal")= msg.usuario.email
                        p(class="font-bold text-gray-800") Mensaje: 
                            span(class="font-normal")= msg.message
                        p(class="font-bold text-gray-800") Enviado: 
                            span(class="font-normal")= formatearFecha(msg.createdAt)
        else 
            p(class="text-center text-gray-600 p-5") No hay mensajes